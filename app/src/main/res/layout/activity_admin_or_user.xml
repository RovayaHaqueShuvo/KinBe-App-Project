<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/Kinbe_BG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_or_User">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:textSize="25sp"
        android:fontFamily="@font/aclonica"
        android:text="Select what you \nup to do..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/seller_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/Seller_Button_Color"
        android:text="Retailer"
        android:textColor="@color/Seller_Button_Text_Color"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aladin"
        android:text="OR"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/seller_btn"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/seller_btn"
        app:layout_constraintTop_toBottomOf="@+id/seller_btn" />

    <Button
        android:id="@+id/buyer_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/Seller_Button_Color"
        android:text="Customer"
        android:textColor="@color/Seller_Button_Text_Color"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/seller_btn"
        app:layout_constraintStart_toStartOf="@+id/seller_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/kinbe_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/shop" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="KinBe"
        android:textColor="#7000FF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/kinbe_icon"
        app:layout_constraintStart_toEndOf="@+id/kinbe_icon"
        app:layout_constraintTop_toTopOf="@+id/kinbe_icon"
        app:layout_constraintVertical_bias="0.638" />
</androidx.constraintlayout.widget.ConstraintLayout>